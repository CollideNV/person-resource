{
  "openapi" : "3.0.1",
  "paths" : {
    "/person" : {
      "post" : {
        "operationId" : "create",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/UpsertPersonDto"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "application/json" : { }
            }
          }
        }
      }
    },
    "/person/{id}" : {
      "get" : {
        "operationId" : "getPerson",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/PersonDTO"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "UpsertPersonDto" : {
        "type" : "object",
        "properties" : {
          "firstName" : {
            "type" : "string"
          },
          "name" : {
            "type" : "string"
          },
          "birthDate" : {
            "type" : "string",
            "format" : "date"
          },
          "linkedInProfile" : {
            "pattern" : "^https?:\\/\\/(www\\.)?linkedin\\.com\\/in\\/[a-zA-Z0-9-]+\\/?$",
            "type" : "string"
          },
          "emailAddress" : {
            "type" : "string"
          }
        }
      },
      "PersonDTO" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "format" : "uuid"
          },
          "firstName" : {
            "type" : "string"
          },
          "name" : {
            "type" : "string"
          },
          "birthDate" : {
            "type" : "string",
            "format" : "date"
          }
        }
      }
    }
  }
}